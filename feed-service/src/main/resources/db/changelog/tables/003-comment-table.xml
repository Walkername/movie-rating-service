<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-comment-table" author="walkername">

        <createTable tableName="comment">
            <column name="id" type="BIGINT" autoIncrement="true" generationType="BY DEFAULT">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_id" type="BIGINT" >
                <constraints nullable="false" />
            </column>
            <column name="post_id" type="BIGINT" >
                <constraints nullable="false" unique="true" foreignKeyName="fk_comment_post_id" references="post(id)" />
            </column>
            <column name="content" type="VARCHAR(500)" >
                <constraints nullable="false" />
            </column>
            <column name="published_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP" >
                <constraints nullable="false" />
            </column>
        </createTable>

    </changeSet>

    <changeSet id="fix-no-unique-post_id" author="">
        <dropUniqueConstraint
                constraintName="fk_comment_post_id"
                tableName="comment"
        />
    </changeSet>
    
    <changeSet id="drop-unique-post_id" author="">
        <dropUniqueConstraint tableName="comment" constraintName="comment_post_id_key" />
    </changeSet>

    <changeSet id="create-foreign-key-post_id" author="">
        <addForeignKeyConstraint
                baseTableName="comment"
                baseColumnNames="post_id"
                constraintName="fk_comment_post_id"
                referencedTableName="post"
                referencedColumnNames="id"
        />
    </changeSet>

</databaseChangeLog>