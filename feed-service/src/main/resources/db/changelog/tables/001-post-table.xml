<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-post-table" author="walkername">

        <createTable tableName="post">
            <column name="id" type="BIGINT" autoIncrement="true" generationType="BY DEFAULT">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="title" type="VARCHAR(50)" >
                <constraints nullable="false" />
            </column>
            <column name="content" type="VARCHAR(500)" >
                <constraints nullable="false" />
            </column>
            <column name="published_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP" >
                <constraints nullable="false" />
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>