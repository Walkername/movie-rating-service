<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-message-table" author="walkername">

        <createTable tableName="message">
            <column name="id" type="BIGINT" autoIncrement="true" generationType="BY DEFAULT">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="chat_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_message_chat_id" references="chat(id)" />
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="content" type="VARCHAR(300)">
                <constraints nullable="false" />
            </column>
            <column name="sent_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP" >
                <constraints nullable="false" />
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>